---
import Layout from "@layouts/Layout.astro";
import BlogCard from "@components/BlogCard.astro";
import { blogs } from "@content/blogs";
---

<Layout>
  <section>
    <div class="grid place-items-center text-center py-14">
      <h1 class="text-3xl">Welcome to my Astro Blog Template 🚀</h1>
    </div>
  </section>
  <section>
    <h1 class="text-3xl">All my posts 📝</h1>
    <div class="flex flex-col sm:grid-cols-2 place-items-center py-14 gap-3 sm:grid">
      {blogs.map((blog) => <BlogCard title={blog.title} description={blog.description} pubDate={blog.pubDate} url={blog.url} tags={blog.tags} />)}
    </div>
  </section>
</Layout>
